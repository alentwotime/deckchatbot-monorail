{
  "folders": [
    { "path": "frontend" },
    { "path": "backend-ai" }
  ],
  "settings": {
    "python.defaultInterpreterPath": "python",
    "eslint.workingDirectories": [
      { "mode": "auto" },
      "frontend"
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    },
    "files.exclude": {
      "**/__pycache__": true,
      "**/.venv": true,
      "**/node_modules": true,
      "**/.codex-prompt.md": false
    },
    "search.exclude": {
      "**/__pycache__": true,
      "**/.venv": true,
      "**/node_modules": true
    }
  }
}
